<table class="table border">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Nome</th>
        <th scope="col">Login</th>
        <th scope="col">Tipo</th>
        <th scope="col">&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    {% for registro in registros %}
    <tr>
        <th scope="row">{{ registro.nome }}</th>
        <td>{{ registro.login }}</td>
        <td>{{ registro._tipo }}</td>
        <td>
            <a href="{{ path_for("usuarioEdit",{'id': registro.id}) }}" class="btn btn-outline-secondary btn-sm">Editar</a>
            <a href="{{ path_for("usuarioDelete",{'id': registro.id}) }}" class="btn btn-outline-secondary btn-sm">Excluir</a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>

