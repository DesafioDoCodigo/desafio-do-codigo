<h5>{{ registro ? "Editar Jornada" : "Incluir Jornada" }}</h5>
<h3>{{ registro.titulo }}</h3>


{% if error %}
    <div class="alert alert-danger" role="alert">
        {{ error }}
    </div>
{% endif %}


<form method="post">
    <div class="form-group">
        <label for="exampleFormControlInput1">Titulo</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" name="titulo" value="{{ registro.titulo }}">
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Resumo da Jornada</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="resumo">{{ registro.resumo }}</textarea>
    </div>

    <div class="form-group">
        <label for="descricao">Descrição da Jornada</label>
        <textarea class="form-control" id="descricao" rows="10" name="descricao">{{ registro.descricao }}</textarea>
    </div>

    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1" name="ativa" value="1" {{ registro.ativa ? "checked" }}>
        <label class="form-check-label" for="exampleCheck1">Ativa</label>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<script>
    // Iniciar editor rico
    ClassicEditor
        .create(document.querySelector('#descricao'),
            {
                toolbar: [ 'Essentials', 'heading', '|', 'bold', 'italic', 'link', 'bulletedList', 'numberedList', 'blockQuote' ],
                height: 300
            }
        )
        .catch(error =>{
        console.error(error);
    });
</script>